<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tareaList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tarea"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkTarea"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tareaList"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:checked="false"
        android:duplicateParentState="false"
        android:text="Done" />

    <TextView
        android:id="@+id/prioridadTarea"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkTarea"
        android:layout_alignBottom="@+id/checkTarea"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="Priodidad"
        android:textColor="@color/secondary_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/fechaTarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/checkTarea"
        android:layout_marginTop="9dp"
        android:text="Fecha" />

</RelativeLayout>